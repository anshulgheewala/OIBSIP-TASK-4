<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Que3">


    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/design"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toLeftOf="@+id/scoring"
            android:text="Score:"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:textSize="30dp">
        </TextView>

        <TextView
            android:id="@+id/scoring"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            android:textSize="30dp"></TextView>


        <TextView
            android:id="@+id/que"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:justificationMode="inter_word"
            android:paddingTop="30dp"
            android:text="India has largest deposits of ____ in the world."
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@id/que"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/option1"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="50dp"
                    android:text="gold"></Button>

                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="mica"
                    android:layout_toRightOf="@+id/option1"
                    android:id="@+id/option2"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="50dp">
                </Button>

                <Button
                    android:id="@+id/option3"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/option1"
                    android:text="copper"
                    android:layout_marginTop="30dp">
                </Button>

                <Button
                    android:id="@+id/option4"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/option2"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/option3"
                    android:text="NONE"
                    android:layout_marginTop="30dp">
                </Button>



            </RelativeLayout>


        </LinearLayout>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>